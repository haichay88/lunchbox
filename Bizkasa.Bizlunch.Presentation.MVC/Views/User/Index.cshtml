
@{
    ViewBag.Title = "Index";
}
<div class="container" ng-controller="AccountController">
    <div class="row " ng-init="GetUsers()">
        <a href="#" class="btn btn-primary btn-xs pull-right" ng-click="ShowPopupAddUser()"><b>+</b> Add new Friend</a>
        <table class="table table-striped custab" >
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full name</th>
                    <th>Email</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
          
                <tr ng-repeat="row in Users">
                    <td>{{row.Id}}</td>
                    <td>{{row.FirstName + row.LastName}}</td>
                    <td>{{row.Email}}</td>
                    <td class="text-center">
                        <a class='btn btn-info btn-xs modal-link'>
                            <span class="glyphicon glyphicon-edit"></span> Edit
                        </a>
                        <a href="#" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a>
                    </td>
                </tr>
           
        </table>
    </div>
    @{ Html.RenderPartial("_AddUser");  }
</div>

@section Scripts {
<script src="~/Scripts/App/account.js"></script>

}

