@{
    ViewBag.Title = "Restaurants";
}
<div class="container" ng-controller="RestaurantController">
    <div class="row " ng-init="GetRestaurants()">
        <a href="#" ng-click="showAddRestaurant()" class="btn btn-default">Add new Restaurant</a>
        <table class="table table-striped custab">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
            <tr ng-repeat="item in Restaurants">
                <td>{{item.Id}}</td>
                <td>{{item.Name}}</td>
                <td>{{item.Address}}</td>
                <td class="text-center">
                    <a class='btn btn-info btn-xs modal-link' href="#">
                        <span class="glyphicon glyphicon-edit"></span> Edit
                    </a>
                    <a href="#" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    @{ Html.RenderPartial("_AddRestaurant");  }
</div>

@section Scripts {
<script src="~/Scripts/App/Restaurant.js"></script>

}